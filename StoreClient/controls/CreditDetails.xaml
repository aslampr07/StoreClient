<UserControl x:Class="StoreClient.controls.CreditDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreClient.controls"
             mc:Ignorable="d">
    <Border BorderThickness="1" BorderBrush="Black" Margin="0,10">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock x:Name="DateBlock" Text="16/08/2017"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="AmountBlock" Text="₹ 1000 "/>
                <TextBlock x:Name="DetailBlock" Text="Credited"/>
            </StackPanel>
        </StackPanel>
    </Border>


</UserControl>
