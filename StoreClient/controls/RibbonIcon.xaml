<UserControl x:Class="StoreClient.RibbonIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreClient"
             mc:Ignorable="d" >
    <Button Background="{x:Null}" BorderThickness="0" Click="Button_Click">
        <StackPanel Orientation="Vertical">
            <Image x:Name="img" Stretch="None" Source="/StoreClient;component/img/Image File_48px_5.png"/>
            <TextBlock x:Name="first"  HorizontalAlignment="Center" FontSize="10" >Add</TextBlock>
            <TextBlock x:Name="second" HorizontalAlignment="Center" FontSize="10">Customer</TextBlock>
        </StackPanel>
    </Button>
</UserControl>
